DirectoryIndex web/index.php
FallbackResource web/index.php
AddCharset UTF-8 .html
AddCharset UTF-8 .php
Options -Multiviews
Options +FollowSymLinks

ErrorDocument 500 /error
ErrorDocument 404 /error
ErrorDocument 403 /error
ErrorDocument 401 /error

RewriteEngine on
RewriteBase /
RewriteRule ^(.*\.db.*)$ web/index.php?p=error [L]
RewriteRule ^(.*\.log.*)$ web/index.php?p=error [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !(/web/.*)/$
RewriteRule ^(.*\..*)$ web/$1 [L]
RewriteRule ^api/([-a-z,A-Z,0-9]+)$ api/index.php?api=$1 [L]
RewriteRule ^([a-z,A-Z,0-9-&?=/]+)$ web/index.php?p=$1 [L]

<Files *.php>
    Order Deny,Allow
    Deny from all
</Files>
<Files *.html>
    Order Deny,Allow
    Deny from all
</Files>
<Files index.php>
    Order Allow,Deny
    Allow from all
</Files>